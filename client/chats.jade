template(name="newChatRoom")
	+header
	.row
		.col.s6.offset-s3
			h1 New Chat Room
			if currentUser
				+quickForm(collection="Models.ChatRooms" id="newChatRoom" fields="name" type="insert")
			else
				p Sign in first!

template(name="chatRoom")
	+header
	.row
		.col.s6.offset-s3
			h1 {{chatRoom.name}}
			if currentUser
				+quickForm(collection="Models.Chats" id="chat" fields="message" type="insert")
	.row
		.col.s6.offset-s3
			each chat in chats
				.card.blue-grey.darken-1
					.card-content.white-text
						.span.card-title
							| {{chat.message}}
						p {{chat.email}}
						p.right {{formatDate chat.createdAt}}
